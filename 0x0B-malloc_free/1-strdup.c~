#include "main.h"
/**
  *_strdup - returns pointer to newly allocated space
  *@str: the string parameter
  *Return: always char
  */
char *_strdup(char *str)
{
	char *l, *c;
	int i;

	for (i = 0; *str != '\0';i++)
	{
		c = &str[i];
	}
	if (c == NULL)
	{
		return (NULL);
	}


	l = (char *) malloc(*c);
	
	*l = *str;
	return (l);
}
